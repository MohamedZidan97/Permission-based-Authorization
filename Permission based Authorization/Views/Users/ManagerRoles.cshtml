@model UserRolesVM
@{
    ViewBag.Title = "ManagerRoles";
   
}

<h1>ManagerRoles</h1>

<form asp-controller="Users" asp-action="ManagerRoles" method="post">
    <h1>
        @Model.Email
    </h1>

    <input type="hidden" asp-for="UserId"/>
    <input type="hidden" asp-for="Email" />

    <div class="card-body">
        @for(int i = 0; i < Model.Roles.Count(); i++)
        {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model.Roles[i].RoleName" />

                <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model.Roles[i].IsSelected" class="form-check-label">
                    @Model.Roles[i].RoleName
                </label>
            </div>
        }
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" >Save</button>
            <a asp-action="ManagerRoles" class="btn btn-primary">Cancel</a>
        </div>

    </div>
    

</form>